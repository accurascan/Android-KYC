<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.accurascan.accurasdk.sample.OcrResultActivity">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lyt_face_image_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_20dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lyt_img_cover"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        app:cardBackgroundColor="@color/backGroundColor"
                        app:cardCornerRadius="@dimen/_8dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ivUserProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:src="@drawable/default_user" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lyt_img_cover2"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginStart="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/backGroundColor"
                        app:cardCornerRadius="@dimen/_8dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ivUserProfile2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:elevation="7dp"
                            android:src="@drawable/default_user" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_button_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/llLiveness"
                        style="@style/ResultButtonLayout">

                        <LinearLayout
                            android:id="@+id/btn_liveness"
                            style="@style/ResultButtonSubLayout"
                            android:onClick="onCLickFaceMatch">

                            <ImageView
                                style="@style/IconLayout"
                                android:src="@drawable/ic_liveness" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/liveness"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/result_title_text" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvLivenessScore"
                            style="@style/ScoreText"
                            android:text="0 %" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFaceMatchScore"
                        style="@style/ResultButtonLayout">

                        <LinearLayout
                            android:id="@+id/btn_fm"
                            style="@style/ResultButtonSubLayout"
                            android:onClick="onCLickFaceMatch">

                            <ImageView
                                style="@style/IconLayout"
                                android:src="@drawable/ic_biometric" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/face_match"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/result_title_text" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvFaceMatchScore"
                            style="@style/ScoreText"
                            android:text="0 %" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/v_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@color/backGroundColor" />
                <!--Security Check-->
                <LinearLayout
                    android:id="@+id/ly_security_container"
                    style="@style/ResultButtonLayout"
                    android:layout_width="match_parent">

                    <LinearLayout
                        style="@style/ResultButtonSubLayout"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@color/white"
                        android:padding="@dimen/_5dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_document_verified" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10dp"
                            android:gravity="center"
                            android:text="DOCUMENT VERIFIED"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/result_title_text" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_security"
                        style="@style/ScoreText"
                        android:text="Yes"
                        android:textColor="@color/security_true"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--front table-->
                <LinearLayout
                    android:id="@+id/ly_front_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/ResultText"
                        android:text="OCR FRONT" />

                    <TableLayout
                        android:id="@+id/front_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/backGroundColor"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>
                <!--back table-->
                <LinearLayout
                    android:id="@+id/ly_back_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/ResultText"
                        android:text="OCR BACK" />

                    <TableLayout
                        android:id="@+id/back_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/backGroundColor"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>
                <!--mrz table-->
                <LinearLayout
                    android:id="@+id/ly_mrz_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/ResultText"
                        android:text="MRZ" />

                    <TableLayout
                        android:id="@+id/mrz_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/backGroundColor"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>
                <!--bank table-->
                <LinearLayout
                    android:id="@+id/ly_bank_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/ResultText"
                        android:text="Bank Card Data" />

                    <TableLayout
                        android:id="@+id/bank_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/backGroundColor"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>
                <!--USDL table-->
                <LinearLayout
                    android:id="@+id/ly_usdl_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/ResultText"
                        android:text="@string/usa_dl_result" />

                    <TableLayout
                        android:id="@+id/usdl_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/backGroundColor"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>
                <!--Pdf417 table-->
                <LinearLayout
                    android:id="@+id/ly_pdf417_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        style="@style/ResultText"
                        android:text="@string/PDF417_Barcode" />

                    <TableLayout
                        android:id="@+id/pdf417_table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/backGroundColor"
                        android:showDividers="middle"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" />

                </LinearLayout>
                <!--dlplate layout-->
                <LinearLayout
                    android:id="@+id/dl_plate_lout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:showDividers="middle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:minHeight="40dp"
                                android:text="Vehicle Plate : "
                                android:textColor="@color/grey"
                                android:textSize="16sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/tv_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:minHeight="40dp"
                                android:paddingStart="20dp"
                                android:text="123456"
                                android:textAllCaps="true"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                        </LinearLayout>
                        <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:background="#FFCCCCCC"/>-->

                    </LinearLayout>

                </LinearLayout>
                <!--Barcode layout-->
                <LinearLayout
                    android:id="@+id/barcode_lout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:showDividers="middle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:minHeight="40dp"
                                android:text="Barcode Data : "
                                android:textColor="@color/grey"
                                android:textSize="16sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/tv_barcode_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:minHeight="40dp"
                                android:paddingStart="20dp"
                                android:text=""
                                android:textAllCaps="true"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                        </LinearLayout>
                        <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:background="#FFCCCCCC"/>-->

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ly_front"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ResultText"
                        android:text="FRONT SIDE" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/iv_frontside"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10dp">

                    <TextView
                        style="@style/ResultText"
                        android:text="BACK SIDE" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_2dp"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/iv_backside"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>